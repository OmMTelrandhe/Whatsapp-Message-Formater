{
  "manifest_version": 3,
  "name": "WhatsApp Format Preserver",
  "version": "1.0.0",
  "description": "Adds buttons to copy WhatsApp messages as code or markdown with preserved formatting",
  "permissions": ["clipboardWrite", "scripting", "storage"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}